<table class="table table-hover table-light">
    <thead>
        <tr class="uppercase">
            <th> # </th>
            <th> 充值时间 </th>
            <th> 充值金额 </th>
            <th> 转账银行 </th>
            <th> 转账人姓名</th>
            <th> 转账账号 </th>
            <th> 充值账号 </th>
            <th> 审核状态</th>
        </tr>
    </thead>
    <tbody>
      {{for data}}
        <tr>
            <td> {{:#index+1 + ~root.pageSize*~root.pageIndex}} </td>
            <td> {{:~formatTime(createtime)}} </td>
            <th> {{:transferMoney}} </th>
            <td> {{:bankName}} </td>
            <td> {{:transferPerson}} </td>
            <td> {{:fromAccount}}</td>
            <td> {{:toAccount}}</td>
            <td> {{:approveString}} </td>
        </tr>
      {{/for}}
    </tbody>
  </table>