<table class="table table-hover table-light">
    <thead>
        <tr class="uppercase">
            <th> # </th>
            <th> 发布时间 </th>
            <th> 店铺名 </th>
            <th> 任务ID </th>
            <th> 发布单数 </th>
            <th> 任务总佣金 </th>
            <th> 已接单耗费总佣金 </th>
        </tr>
    </thead>
    <tbody>
      {{for data}}
        <tr>
            <td> {{:#index+1 + ~root.pageSize*~root.pageIndex}} </td>
            <td> {{:~formatTime(createtime)}} </td>
            <th> {{:shopName}} </th>
            <td> {{:taskId}} </td>
            <td> {{:number}} </td>
            <td> {{:serviceSum}} </td>
            <td> {{:completeServiceSum}} </td>
        </tr>
      {{/for}}
    </tbody>
  </table>